<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        {{#each posts}}
            <div id="trend1" class="col-lg-6 col-md-6 col-xs-12">
	            <div class="panel panel-default">
		        <div class="panel-heading text-center">{{this.name}}</div>
  		        <div class="panel-body trending-panels">{{truncate this.body 100}}<a href="/topics/{{this.id}}" title="Read full post." alt="Read full post." style="color: white;"><small> . . . <i>read more.</i></small></a></div>
  		        <div class-"panel-body" style="padding-left: 15px;">
  		            <h6>&nbsp;<i class="fa fa-user" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;Author: <small>{{this.author}}</small></h6>
                    <h6><i class="fa fa-connectdevelop" aria-hidden="true"></i> &nbsp;&nbsp;Nuance Points: {{this.points}} </h6>
                    <h6>&nbsp;<i class="fa fa-rss" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp;Last Updated: <small>{{date this.updatedAt "LLL"}}</small></h6>
                </div>
                <a href="/topics/{{this.id}}" type="submit" class="btn btn-primary see-more-button" id="">SEE FULL POST</a>
	            </div>
            </div>
        {{/each}}
    </div>
</div>
<div>
    <div class="row">
        <div class="col-lg-3 col-md-3"></div>
        <div class="col-lg-6 col-md-6">
            <p style="text-align: center; padding-top: 15px; padding-bottom: 25px;"><a href="#top-of-page" id="back-to-top">Back to Top</a></p>
        </div>
        <div class="col-lg-3 col-md-3"></div>
    </div>
</div>